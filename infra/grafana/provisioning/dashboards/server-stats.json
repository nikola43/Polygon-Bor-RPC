{
  "uid": "server-stats",
  "title": "Server Stats",
  "tags": ["polygon", "node-exporter"],
  "timezone": "utc",
  "schemaVersion": 39,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "templating": { "list": [] },
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100 },
        "overrides": []
      },
      "targets": [
        {
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Load Average",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "1m",
          "refId": "A"
        },
        {
          "expr": "node_load5",
          "legendFormat": "5m",
          "refId": "B"
        },
        {
          "expr": "node_load15",
          "legendFormat": "15m",
          "refId": "C"
        }
      ]
    },
    {
      "id": 3,
      "title": "RAM Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "bytes" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "Used",
          "refId": "A"
        },
        {
          "expr": "node_memory_MemAvailable_bytes",
          "legendFormat": "Available",
          "refId": "B"
        },
        {
          "expr": "node_memory_Cached_bytes",
          "legendFormat": "Cached",
          "refId": "C"
        },
        {
          "expr": "node_memory_Buffers_bytes",
          "legendFormat": "Buffers",
          "refId": "D"
        }
      ]
    },
    {
      "id": 4,
      "title": "RAM Usage",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 70, "color": "yellow" },
              { "value": 90, "color": "red" }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "(1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100",
          "legendFormat": "RAM Used %",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Disk I/O Throughput",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "Bps" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total{device=~\"nvme.*|sd.*\"}[5m])",
          "legendFormat": "Read {{ device }}",
          "refId": "A"
        },
        {
          "expr": "rate(node_disk_written_bytes_total{device=~\"nvme.*|sd.*\"}[5m])",
          "legendFormat": "Write {{ device }}",
          "refId": "B"
        }
      ]
    },
    {
      "id": 6,
      "title": "Disk IOPS",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "iops" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(node_disk_reads_completed_total{device=~\"nvme.*|sd.*\"}[5m])",
          "legendFormat": "Read {{ device }}",
          "refId": "A"
        },
        {
          "expr": "rate(node_disk_writes_completed_total{device=~\"nvme.*|sd.*\"}[5m])",
          "legendFormat": "Write {{ device }}",
          "refId": "B"
        }
      ]
    },
    {
      "id": 7,
      "title": "Disk I/O Latency",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(node_disk_read_time_seconds_total{device=~\"nvme.*|sd.*\"}[5m]) / rate(node_disk_reads_completed_total{device=~\"nvme.*|sd.*\"}[5m])",
          "legendFormat": "Read {{ device }}",
          "refId": "A"
        },
        {
          "expr": "rate(node_disk_write_time_seconds_total{device=~\"nvme.*|sd.*\"}[5m]) / rate(node_disk_writes_completed_total{device=~\"nvme.*|sd.*\"}[5m])",
          "legendFormat": "Write {{ device }}",
          "refId": "B"
        }
      ]
    },
    {
      "id": 8,
      "title": "Filesystem Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100 },
        "overrides": []
      },
      "targets": [
        {
          "expr": "(1 - node_filesystem_avail_bytes{fstype=~\"ext4|xfs\"} / node_filesystem_size_bytes{fstype=~\"ext4|xfs\"}) * 100",
          "legendFormat": "{{ mountpoint }}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 9,
      "title": "Network Throughput",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "bps" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!~\"lo|docker.*|veth.*\"}[5m]) * 8",
          "legendFormat": "Rx {{ device }}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!~\"lo|docker.*|veth.*\"}[5m]) * 8",
          "legendFormat": "Tx {{ device }}",
          "refId": "B"
        }
      ]
    },
    {
      "id": 10,
      "title": "Open File Descriptors",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "node_filefd_allocated",
          "legendFormat": "Allocated",
          "refId": "A"
        },
        {
          "expr": "node_filefd_maximum",
          "legendFormat": "Maximum",
          "refId": "B"
        }
      ]
    },
    {
      "id": 11,
      "title": "Uptime",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "time() - node_boot_time_seconds",
          "legendFormat": "Uptime",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    }
  ]
}
