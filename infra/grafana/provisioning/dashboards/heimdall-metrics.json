{
  "uid": "heimdall-metrics",
  "title": "Heimdall Metrics",
  "tags": ["polygon", "heimdall", "cometbft"],
  "timezone": "utc",
  "schemaVersion": 39,
  "refresh": "15s",
  "time": { "from": "now-1h", "to": "now" },
  "templating": { "list": [] },
  "panels": [
    {
      "id": 1,
      "title": "Block Height",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "cometbft_consensus_height{job=\"heimdall\"}",
          "legendFormat": "Block Height",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Block Interval",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(cometbft_consensus_height{job=\"heimdall\"}[1m])",
          "legendFormat": "Blocks/sec",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Blocks per Minute",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              { "value": 0, "color": "red" },
              { "value": 10, "color": "yellow" },
              { "value": 20, "color": "green" }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(cometbft_consensus_height{job=\"heimdall\"}[5m]) * 60",
          "legendFormat": "Blocks/min",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 4,
      "title": "Consensus Rounds",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "cometbft_consensus_rounds{job=\"heimdall\"}",
          "legendFormat": "Rounds",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Validators",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "cometbft_consensus_validators{job=\"heimdall\"}",
          "legendFormat": "Total Validators",
          "refId": "A"
        },
        {
          "expr": "cometbft_consensus_missing_validators{job=\"heimdall\"}",
          "legendFormat": "Missing Validators",
          "refId": "B"
        }
      ]
    },
    {
      "id": 6,
      "title": "Peers",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "cometbft_p2p_peers{job=\"heimdall\"}",
          "legendFormat": "Connected Peers",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "title": "P2P Traffic",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "Bps" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(cometbft_p2p_peer_receive_bytes_total{job=\"heimdall\"}[5m])",
          "legendFormat": "Receive",
          "refId": "A"
        },
        {
          "expr": "rate(cometbft_p2p_peer_send_bytes_total{job=\"heimdall\"}[5m])",
          "legendFormat": "Send",
          "refId": "B"
        }
      ]
    },
    {
      "id": 8,
      "title": "Mempool Size",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "cometbft_mempool_size{job=\"heimdall\"}",
          "legendFormat": "Mempool Txs",
          "refId": "A"
        }
      ]
    },
    {
      "id": 9,
      "title": "Mempool Bytes",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "bytes" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "cometbft_mempool_size_bytes{job=\"heimdall\"}",
          "legendFormat": "Mempool Bytes",
          "refId": "A"
        }
      ]
    }
  ]
}
